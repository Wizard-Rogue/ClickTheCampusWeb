<div class="page-header">
  <h1><%=t '.title', :default => Event.model_name.human.pluralize %></h1>
</div>
<table class="table table-hover table-bordered">
  <tr>
    <th><%= Event.human_attribute_name(:name) %></th>
    <th><%= Event.human_attribute_name(:date) %></th>
    <th><%= Event.human_attribute_name(:time) %></th>
    <th><%= Event.human_attribute_name(:external_link) %></th>
    <th>Creator</th>
    <th>Organization/Department</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.name, event_path(event) %></td>
      <td><%= event.date.strftime("%b %d, %Y") %></td>
      <td><%= event.time.strftime("%l:%M %p") %></td>
      <td><%= event.external_link %></td>
      <td><%= event.creator.username %></td>
      <td><%= event.source %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_event_path(event), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    event_path(event),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>